<%= render 'shared/sidebar'%>
<div class="col-md-10">
  <%= render 'shared/nav-filter' do |f|%>
    <div class="row">
      <div class="col-md-3">
        <%= render 'shared/interval-filter', form: f %>
      </div>
      <div class="col-md-8 col-md-offset-1">
      <%= render 'shared/code-climate-summary', code_climate: @code_climate %>
      </div>
    </div>
  <% end %>
  <div class='code-owners'>
    <span class='code-owners-title'>Code Owners</span>
    <div class="code-owners-list">
      <%if @code_owners.present? %>
        <ul>
          <% @code_owners.each do |code_owner|%>
            <li>
              <span class="badge badge-secondary"><%= code_owner %></span>
            </li>
          <%end%>
        </ul>
      <%end%>
    </div>
  </div>
  <%= render 'review_turnaround', review_turnaround: @review_turnaround %>

  <%= render 'merge_time', merge_time: @merge_time %>
</div>

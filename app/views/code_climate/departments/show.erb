<%= content_for :development_metrics_sidebar do %>
  <%= render 'development_metrics/sidebar'%>
<% end %>

<div class="col-md-12">
  <div class="row p-3">
    <div class="col-md-12">
      <%= render 'nav-filter', department: @department do |f|%>
        <div class="row">
          <div class="col-md-5 period-input">
            <%= render 'shared/interval-filter', form: f %>
          </div>
          <div class="col-md-8 col-md-offset-1">
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row p-3">
    <div class="col-md-12">
      <%= render 'code_climate_department_report',
                 department: @department,
                 projects_details: @code_climate if @code_climate.present?
      %>
    </div>
  </div>
</div>

<%= simple_form_for :code_climate, url: projects_development_metrics_path,
  method: 'GET', html: {
    class: 'nav-filter p-3 shadow-box' } do |form|%>
  <h4 class="text-center">CodeClimate report for <%= @department.name %> projects Department</h4>
  <div class="row sticky-top p-3">
    <div class="col-md-3">
      <%= form.input :period,
        wrapper_html: { class: 'drop-down-horizontal' },
        input_html: {},
        required: false,
        collection: period_choices,
        selected: 'all',
        disabled: false
      %>
    </div>

    <div class="col-md-3">
      <%= form.input :language,
        wrapper_html: { class: 'drop-down-horizontal' },
        input_html: {},
        required: false,
        collection: language_choices(@department),
        selected: 'all',
        disabled: false
      %>
    </div>
  </div>
<% end %>
